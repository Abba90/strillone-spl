<UserControl x:Class="Shoutcast.Sample.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" Unloaded="PageUnloaded">
    <UserControl.Resources>
        <MediaElement x:Key="mediaPlayer" Volume="1.0" BufferingProgressChanged="BufferingProgressChanged" MediaFailed="MediaFailed" CurrentStateChanged="CurrentStateChanged" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel>
            <TextBlock x:Name="statusTextBlock" Text="Closed" TextWrapping="Wrap" />
            <RadioButton x:Name="mp3StreamRadioButton" GroupName="audioGroup" IsChecked="True" Content="Mp3" />
            <RadioButton x:Name="aacStreamRadioButton" GroupName="audioGroup" IsChecked="False" Content="AAC+" />
            <Button Content="Play" Click="PlayClick" />
        </StackPanel>
    </Grid>
</UserControl>
